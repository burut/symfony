{% extends "@BurutMenu/burut_layout.html.twig" %}

{% block content %}
    This is Products page<br/><br/>


    <table style="border-collapse:collapse; border:2px solid black;">
        <tr>

            <th> id </th>
            <th> картинка </th>
            <th> название </th>
            <th> цена </th>

        </tr>
        {% for id, product in products %}

                <tr>
                    <td> {{ id }} </td>
                    <td> <img width="50px" height="50px" src=" {{ product.img }} "> </td>
                    <td> {{ product.title }} </td>
                    <td> {{ product.price }} </td>
                </tr>

        {% endfor %}
    </table>


{% endblock %}

{% block m5 %}
    <b>Products</b>
{% endblock %}

{% block title %}Products{% endblock %}