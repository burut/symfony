{% extends "@BurutMenu/burut_layout.html.twig" %}

{% block content %}
    This is Our team page<br/><br/>


    <table style="text-align:center; border-collapse:collapse; border:2px solid black;">
        <tr style="text-align: center;">

            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> id </th>
            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> name </th>
            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> position </th>
            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> age </th>
            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> photo </th>
            <th style="padding-left:25px; padding-right:25px; border-bottom:2px solid #000000; border-left:2px solid #000000;"> bio </th>


        </tr>
        {% for id, ourteam in ourteam %}

                <tr>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> {{ id }} </td>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> {{ ourteam.name }} </td>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> {{ ourteam.position }} </td>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> {{ ourteam.age }} </td>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> <img width="50px" height="50px" src=" {{ ourteam.photo }} "> </td>
                    <td style="border-bottom:2px solid #000000; border-left:2px solid #000000;"> <a href="/ourteam/{{ id }}"> bio </a> </td>
                </tr>

        {% endfor %}
    </table>


{% endblock %}

{% block m6 %}
    <b>Products</b>
{% endblock %}

{% block title %}Products{% endblock %}